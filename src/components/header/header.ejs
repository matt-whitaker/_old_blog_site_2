<%
    const isPost = page.date && page.layout === 'post';
    const hasTitle = !!page.title
%>

<% if (!page.suppress_header) { %>
<header class="dt-header<%- isPost ? ' date-shown' : '' %>" style="background: url('<%- page.image %>'); <%- page.image_offset ? 'background-position: ' + page.image_offset : '' %>; <%- page.image_size ? 'background-size: ' + page.image_size : '' %>;">
    <% if (hasTitle) { %>
    <h1><span><%- page.title %></span></h1>
    <% } %>

    <% if (isPost) { %>
    <h2>
        <span>
            <time datetime="<%= date_xml(page.date) %>" itemprop="datePublished"><%= date(page.date, 'MMM Do, YYYY') %></time>
        </span>
    </h2>
    <% } %>
</header>
<% } %>